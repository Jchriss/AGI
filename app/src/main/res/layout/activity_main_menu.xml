<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/main_menu_target_phone_bar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="目标号码"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:textSize="12sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"/>
    </LinearLayout>
    <GridView
        android:id="@+id/main_menu_gridView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/main_menu_target_phone_bar"
        android:numColumns="3"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
    />
    <ListView
        android:id="@+id/main_menu_device_configuration_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1dip"
        android:clickable="true"
        android:layout_below="@+id/main_menu_gridView"
        android:layout_above="@+id/main_menu_device_status_bar"/>
    <LinearLayout
        android:id="@+id/main_menu_device_status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFBFBFBF"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="设备状态:"
            android:textSize="17sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/main_menu_device_status"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="准备中"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AGI 1"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/main_menu_device_background_01"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="#FFCC0000"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AGI 2"

            android:textSize="17sp"/>
        <TextView
            android:id="@+id/main_menu_device_background_02"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="#FFCC0000"
            />
    </LinearLayout>
</RelativeLayout>