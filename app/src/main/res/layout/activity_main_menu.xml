<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_menu_head_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/main_menu_image">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/main_menu_target_phone_bar"
        android:layout_below="@+id/main_menu_head_image">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="目标号码"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:textSize="12sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"/>
    </LinearLayout>
    <GridView
        android:id="@+id/main_menu_gridView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/main_menu_target_phone_bar"
        android:numColumns="3"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
    />
    <ImageView
        android:id="@+id/main_menu_devide_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/main_menu_gridView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_menu_devide_line"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/main_menu_device_connnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/main_menu_device_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_menu_device_status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFBFBFBF"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="设备状态:"
            android:textSize="17sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/main_menu_device_status_text"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="未就绪"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AGI 1"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/main_menu_device_background_one"
            android:layout_width="15dp"
            android:layout_height="20dp"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AGI 2"

            android:textSize="17sp"/>
        <TextView
            android:id="@+id/main_menu_device_background_two"
            android:layout_width="15dp"
            android:layout_height="20dp"
            />
    </LinearLayout>
</RelativeLayout>